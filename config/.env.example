# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_OWNER_ID=your_discord_user_id_here
DISCORD_GUILD_ID=your_server_id_here

# Claude AI Configuration
CLAUDE_API_KEY=sk-ant-api03-your_api_key_here
CLAUDE_MODEL=claude-3-5-haiku-20241022
CLAUDE_MAX_TOKENS=500

# Model Options:
# claude-3-5-haiku-20241022 (RECOMMENDED) - Best balance of cost/performance for tool use (~73% cheaper than Sonnet 4.5)
# claude-sonnet-4-5-20250929 (Premium) - Maximum capability but 4-5x more expensive than Haiku
# claude-3-5-sonnet-20241022 (Mid-tier) - Good performance but 2-3x more expensive than Haiku

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/the-nook?retryWrites=true&w=majority

# Bot Configuration
MODERATION_LEVEL=2
AUTO_WELCOME=true
CONTEXT_MAX_MESSAGES=10

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Environment
NODE_ENV=production
PORT=3000
