# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_OWNER_ID=your_discord_user_id_here
# For multiple owners, use comma-separated IDs: DISCORD_OWNER_ID=123456789,987654321
DISCORD_GUILD_ID=your_server_id_here

# Claude AI Configuration
CLAUDE_API_KEY=sk-ant-api03-your_api_key_here
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=1000

# Model Options:
# claude-sonnet-4-5-20250929 (RECOMMENDED) - Best for complex agents & tool use. Same price as Haiku ($3/$15 per million tokens)
# claude-3-7-sonnet-20250219 (Alternative) - Hybrid reasoning model, same price, strong at coding
# claude-3-5-haiku-20241022 (Budget) - Faster but less capable for agentic tasks
# claude-3-5-sonnet-20241022 (Legacy) - Older Sonnet version, same price as 4.5

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/the-nook?retryWrites=true&w=majority

# Bot Configuration
MODERATION_LEVEL=2
AUTO_WELCOME=true
CONTEXT_MAX_MESSAGES=10

# Debug Configuration
DEBUG_CHANNEL_ID=your_debug_channel_id_here
# Optional: Whitelist bot IDs that Sunny can respond to (comma-separated)
# Example: WHITELISTED_BOT_IDS=1426311369992437761,987654321
WHITELISTED_BOT_IDS=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/combined.log

# Environment
NODE_ENV=production
PORT=3000
