# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_OWNER_ID=your_discord_user_id_here

# ===========================================
# AI PROVIDER CONFIGURATION
# ===========================================
# Options: 'groq' (FREE!), 'anthropic', or 'zai'
AI_PROVIDER=groq

# ===========================================
# GROQ CONFIGURATION (FREE TIER - RECOMMENDED!)
# ===========================================
# Get your FREE API key at: https://console.groq.com
# No credit card required!
#
# Free Tier Limits:
# - 14,400 requests/day
# - 6,000 tokens/minute
# - 300+ tokens/second (blazing fast!)
#
# Models available:
# - llama-3.3-70b-versatile (best quality)
# - llama-3.1-8b-instant (fastest)
# - mixtral-8x7b-32768 (good balance)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=2000
GROQ_TEMPERATURE=0.7

# ===========================================
# ANTHROPIC CLAUDE (PAID)
# ===========================================
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307
CLAUDE_MAX_TOKENS=3000
CLAUDE_TEMPERATURE=0.7

# ===========================================
# Z.AI CONFIGURATION (PAID)
# ===========================================
ZAI_API_KEY=your_zai_api_key_here
ZAI_BASE_URL=https://api.z.ai/api/paas/v4/
ZAI_MAX_TOKENS=3000
ZAI_TEMPERATURE=0.7

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB (optional - bot works without it)
MONGO_URI=mongodb://localhost:27017/sunny-bot

# ===========================================
# BOT FEATURES
# ===========================================
# Memory System
MEMORY_ENABLED=true
MEMORY_USER_PROFILES=true
MEMORY_SEMANTIC_ENABLED=true
CONTEXT_CROSS_CHANNEL=false

# Context Configuration
CONTEXT_MAX_MESSAGES=20
CONTEXT_SUMMARIZE_AFTER=30

# Moderation (1=lenient, 2=moderate, 3=strict)
MODERATION_ENABLED=true
MODERATION_LEVEL=2

# Debug
DEBUG_MODE=false
DEBUG_INSTANCE_ID=prod-001

# Bot Whitelisting (Comma-separated IDs)
WHITELISTED_BOT_IDS=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# ===========================================
# RENDER.COM DEPLOYMENT (FREE TIER)
# ===========================================
PORT=3000
RENDER_EXTERNAL_URL=
ENABLE_KEEP_ALIVE=true
