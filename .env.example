# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_OWNER_ID=your_discord_user_id_here

# AI Provider Configuration
AI_PROVIDER=anthropic                 # Options: 'anthropic' or 'zai'

# Claude API Configuration (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-haiku-20240307  # Options: claude-3-haiku-20240307, claude-3-5-haiku-20241022
CLAUDE_MAX_TOKENS=3000
CLAUDE_TEMPERATURE=0.7

# Z.AI Configuration
ZAI_API_KEY=your_zai_api_key_here
ZAI_BASE_URL=https://api.z.ai/api/paas/v4/
ZAI_MODEL=glm-4.5-air                 # Options: glm-4.5-air, glm-4.5, glm-4.6
ZAI_MAX_TOKENS=3000
ZAI_TEMPERATURE=0.7

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/sunny-bot

# Memory System Configuration
MEMORY_ENABLED=true                    # Enable/disable memory system
MEMORY_USER_PROFILES=true              # Enable user profile tracking
MEMORY_SEMANTIC_ENABLED=true           # Enable topic extraction and knowledge base
CONTEXT_CROSS_CHANNEL=false            # Enable cross-channel context (experimental)

# Context Configuration
CONTEXT_MAX_MESSAGES=20                # Number of messages to keep in context
CONTEXT_SUMMARIZE_AFTER=30             # Summarize conversation after this many messages

# Moderation Configuration
MODERATION_ENABLED=true
MODERATION_LEVEL=2                     # 1=lenient, 2=moderate, 3=strict

# Debug Configuration
DEBUG_MODE=false
DEBUG_INSTANCE_ID=prod-001

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Bot Whitelisting (Comma-separated IDs)
WHITELISTED_BOT_IDS=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true